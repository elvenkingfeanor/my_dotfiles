#
# zathurarc
#

# sqlite backend (default "plain" backend is deprecated)
set database "sqlite"

# Synctex
set synctex true
set synctex-editor-command "nvim --headless -c \"VimtexInverseSearch %{line} '%{input}'\""

# Enable copy to clipboard
set selection-clipboard clipboard

# No padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# Replace $HOME with ~
set statusbar-home-tilde
set window-title-home-tilde

# Follow links on double click
set double-click-follow

# icon
set window-icon on

# Recolor
set recolor-keephue
set recolor-reverse-video

# Shortcuts
map d toggle_page_mode
map i recolor

# Color
# gruvbox-light theme
#set default-bg "#fbf1c7"
#set default-fg "#fdf4c1"
#set index-bg "#fbf1c7"
#set index-fg "#458588"
#set index-active-bg "#f2e5bc"
#set index-active-fg "#98971a"
#set statusbar-bg "#98971a"
#set statusbar-fg "#fdf4c1"
#set inputbar-bg "#fbf1c7"
#set inputbar-fg "#458588" 
#set completion-bg "#f2e5bc"
#set completion-fg "#458588"
# gruvbox-dark theme
set default-bg "#282828"
set default-fg "#282828"
set index-bg "#282828"
set index-fg "#458588"
set index-active-bg "#32302f"
set index-active-fg "#98971a"
set statusbar-bg "#98971a"
set statusbar-fg "#282828"
set inputbar-bg "#282828"
set inputbar-fg "#458588" 
set completion-bg "#32302f"
set completion-fg "#458588"
