SHELL=/bin/bash
DISPLAY=:0
@reboot /usr/bin/find $HOME . > /dev/null
0 * * * * /usr/bin/find $HOME . > /dev/null
@reboot source ~/.config/X11/xdbus; /usr/bin/notify-send "updates available $(/usr/bin/pacman -Qu | /usr/bin/wc -l)"
0 * * * * source ~/.config/X11/xdbus; /usr/bin/notify-send "updates available $(/usr/bin/pacman -Qu | /usr/bin/wc -l)"
@reboot source ~/.config/X11/xdbus; /usr/bin/sleep 60 && ~/.local/bin/empty_paper
5 */6 * * * source ~/.config/X11/xdbus; ~/.local/bin/empty_paper
